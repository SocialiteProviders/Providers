{
    "preset": "laravel",
    "rules": {
        "array_push": true,
        "binary_operator_spaces": {
            "operators": {
                "=>": "align"
            }
        },
        "is_null": true,
        "no_superfluous_elseif": true,
        "no_superfluous_phpdoc_tags": false,
        "no_useless_else": true,
        "ordered_class_elements": {
            "order": [
                "use_trait",
                "constant",
                "property",
                "method"
            ]
        },
        "yoda_style": {
            "always_move_variable": true,
            "equal": false,
            "identical": false,
            "less_and_greater": false
        }
    }
}
